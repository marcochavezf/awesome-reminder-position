{
	"name": "awesome-reminder-position",
	"displayName": "awesome-reminder-position",
	"description": "Track positions in your code",
	"version": "0.0.1",
	"enableProposedApi": true,
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:activePositions",
		"onLanguage:json",
		"onLanguage:jsonc"
	],
	"main": "./out/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "activePositions",
					"name": "Last Active Positions",
					"when": "activePositionsEnabled"
				}
			]
		},
		"commands": [
			{
				"command": "activePositions.refresh",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "activePositions.refreshNode",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "activePositions.renameNode",
				"title": "Rename"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "activePositions.refresh",
					"when": "view == activePositions",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "activePositions.renameNode",
					"when": "view == activePositions"
				},
				{
					"command": "activePositions.refreshNode",
					"when": "view == activePositions",
					"group": "inline"
				}
			]
		},
		"configuration": [
			{
				"title": "JSON Outline",
				"properties": {
					"activePositions.autorefresh": {
						"type": "boolean",
						"default": false
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.40.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"tslint": "^5.20.0",
		"typescript": "^3.6.4",
		"vscode-test": "^1.2.2"
	},
	"dependencies": {
		"jsonc-parser": "^2.2.0"
	}
}
